@model IEnumerable<Brain.Models.User>
@{
	ViewBag.Title = "Home";
}

<div class="row">
	<div class="col-md-offset-1 col-md-5">
		<h2>Brain Productivity</h2>
		
			Some information to present our app.
			@foreach (var item in Model)
			{
				<h4>@item.Username</h4>
			}
		
	</div>
	<div class="col-md-5">
		<a href="#login" data-toggle="tab">
			<h3>Login</h3></a>
		<a href="#register" data-toggle="tab">
			<h3>Register</h3></a>

		<div class="tab-content">
			<div class="tab-pane active" id="login">
				@using (Html.BeginForm("Login", "Home", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
				{
					@Html.Label("Username")
					@Html.TextBox("txtUsername")
					<br/>
					@Html.Label("Password")
					@Html.Password("txtPassword")
					<br/>
					<input type="submit" class="btn btn-default" value="Login"/>
				}

			</div>
			<div class="tab-pane" id="register">

				<div class="form-group">
					<div class="col-md-offset-2 col-md-10">
						@using (Html.BeginForm("Register", "Home", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
						{
							@Html.Label("Username")
							@Html.TextBox("txtUsernameRegister")
							<br/>
							@Html.Label("Password")
							@Html.Password("txtPasswordRegister")
							<br/>
							@Html.Label("Email")
							@Html.TextBox("txtEmail")
							<br/>
							<input type="submit" class="btn btn-default" value="Register"/>
						}

					</div>
				</div>
			</div>
		</div>
	</div>
	@Html.ActionLink("About", "About", "Home")
</div>
