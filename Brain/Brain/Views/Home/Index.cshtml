@model IEnumerable<Brain.Models.User>
@{
	ViewBag.Title = "Home";
}

<div class="row">
	<div class="col-md-offset-1 col-md-5">
		<h2>Brain Productivity</h2>

		Some information to present our app.
		@foreach (var item in Model)
			{
			<h4>@item.Username</h4>
			}

	</div>
	<div class="col-md-5">
		<a href="#login" data-toggle="tab">
			<h3>Login</h3>
		</a>
		<a href="#register" data-toggle="tab">
			<h3>Register</h3>
		</a>

		<div class="tab-content">
			<div class="tab-pane active" id="login">
				@using (Html.BeginForm("Login", "Home", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
				{
					@Html.Label("Username")
					@Html.TextBox("txtUsername")
					<br />
					@Html.Label("Password")
					@Html.Password("txtPassword")
					<br />
					<button id="login">Login</button>
				}

			</div>
			<div class="tab-pane" id="register">

				<div class="form-group">
					<div class="col-md-offset-2 col-md-10">
						@Html.AntiForgeryToken()
						<h4>Create a new account.</h4>
						<hr />
						@Html.ValidationSummary("", new {@class = "text-danger"})
						<div class="form-group">
							@Html.Label("Email", new {@class = "col-md-2 control-label"})
							<div class="col-md-10">
								@Html.TextBox("txtEmail", "Email", new {@class = "form-control"})
							</div>
						</div>
						<div class="form-group">
							@Html.Label("Password", new {@class = "col-md-2 control-label"})
							<div class="col-md-10">
								@Html.Password("txtPassword", "Password", new {@class = "form-control"})
							</div>
						</div>
						<div class="form-group">
							@Html.Label("ConfirmPassword", new {@class = "col-md-2 control-label"})
							<div class="col-md-10">
								@Html.Password("txtConfirmPassword", "ConfirmPassword", new {@class = "form-control"})
							</div>
							<input type="submit" class="btn btn-default" value="Register" />
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>